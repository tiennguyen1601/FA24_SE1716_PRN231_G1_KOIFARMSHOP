@model KOIFARMSHOP.Data.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <!-- Left Column: Product Images -->
    <div class="col-md-4">
        <h4>Product Images</h4>
        <hr />
        <div id="productImageCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @if (Model.ProductImages != null && Model.ProductImages.Any())
                {
                    var isFirstImage = true;
                    foreach (var image in Model.ProductImages)
                    {
                        <div class="carousel-item @(isFirstImage ? "active" : "")">
                            <img src="@image.ImageUrl" class="d-block w-100" alt="Product Image" />
                        </div>
                        isFirstImage = false;
                    }
                }
                else
                {
                    <div class="carousel-item active">
                        <img src="~/images/default-product.png" class="d-block w-75" alt="Default Image" />
                    </div>
                }
            </div>

            @if (Model.ProductImages != null && Model.ProductImages.Count > 1)
            {
                <!-- Carousel controls -->
                <a class="carousel-control-prev" href="#productImageCarousel" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only text-secondary">Previous</span>
                </a>
                <a class="carousel-control-next" href="#productImageCarousel" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only text-secondary">Next</span>
                </a>
            }
        </div>
    </div>

    <!-- Right Column: Product Information -->
    <div class="col-md-8">
        <h4>Product Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StockQuantity)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.StockQuantity)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Brand)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Brand)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Weight)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Weight)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Discount)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ExpiryDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ExpiryDate)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ManufacturingDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ManufacturingDate)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

             @{
                var categoryName = Model.Category != null ? Model.Category.Name : "N/A";
            }

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Category)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => categoryName)</dd>

            @{
                var createdBy = Model.CreatedByNavigation != null ? Model.CreatedByNavigation.FullName : "N/A";
            }

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedByNavigation)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => createdBy)</dd>

            @{
                var modifyBy = Model.ModifiedByNavigation != null ? Model.ModifiedByNavigation.FullName : "N/A";
            }

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ModifiedByNavigation)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => modifyBy)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
