@model KOIFARMSHOP.Data.DTO.OrderDTO.OrderCompleteRequest

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Edit Order</h1>

<h4 class="mb-3">Order Details</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="OrderId" />

            <div class="form-group mb-3">
                <label asp-for="OrderId" class="form-label"></label>
                <input asp-for="OrderId" class="form-control" readonly />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalAmount" class="form-label"></label>
                <input asp-for="TotalAmount" class="form-control" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PromotionId" class="form-label"></label>
                <select asp-for="PromotionId" class="form-control" asp-items="ViewBag.PromotionId"></select>
                <span asp-validation-for="PromotionId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ShippingAddress" class="form-label"></label>
                <input asp-for="ShippingAddress" class="form-control" />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DeliveryMethod" class="form-label"></label>
                <input asp-for="DeliveryMethod" class="form-control" />
                <span asp-validation-for="DeliveryMethod" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PaymentStatus" class="form-label"></label>
                <input asp-for="PaymentStatus" class="form-control" />
                <span asp-validation-for="PaymentStatus" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Vat" class="form-label"></label>
                <input asp-for="Vat" class="form-control" />
                <span asp-validation-for="Vat" class="text-danger"></span>
            </div>

            <h4 class="mt-4 mb-3">Order Detail</h4>
            <div class="order-detail border p-3 mb-4" style="background-color: #f9f9f9;">
                <div class="form-group mb-3">
                    <label asp-for="AnimalID" class="form-label"></label>
                    <select asp-for="AnimalID" class="form-control" asp-items="ViewBag.AnimalId"></select>
                    <span asp-validation-for="AnimalID" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount" class="form-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Subtotal" class="form-label"></label>
                    <input asp-for="Subtotal" class="form-control" />
                    <span asp-validation-for="Subtotal" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Discount" class="form-label"></label>
                    <input asp-for="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
