    <form asp-action="Delete" style="text-align: center; margin-top: 20px;">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" style="padding: 10px 20px; font-size: 16px;" /> |
        <a asp-action="Index" style="text-decoration: none; color: #007bff;">Back to List</a>
    </form>
</div>
