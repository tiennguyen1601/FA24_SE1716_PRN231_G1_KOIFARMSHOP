@model KOIFARMSHOP.Data.DTO.OrderDTO.OrderResponseModel;

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align: center; margin-bottom: 20px;">Delete</h1>

<h3 style="text-align: center; color: #dc3545;">Are you sure you want to delete this?</h3>

