        <dt class="col-sm-4" style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-4" style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
        <dt class="col-sm-4" style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.ShippingAddress)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ShippingAddress)
        </dd>
        <dt class="col-sm-4" style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.DeliveryMethod)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.DeliveryMethod)
        </dd>
        <dt class="col-sm-4" style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.PaymentStatus)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.PaymentStatus)
        </dd>
        <dt class="col-sm-4" style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.Vat)
        </dt>
        <dd class="col-sm-8">
