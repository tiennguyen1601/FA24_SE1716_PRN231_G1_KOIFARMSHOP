@model KOIFARMSHOP.Data.DTO.OrderDTO.OrderCompleteRequest

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group">
                <label asp-for="Order.TotalAmount" class="control-label"></label>
                <input asp-for="Order.TotalAmount" class="form-control" />
                <span asp-validation-for="Order.TotalAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order.PromotionId" class="control-label"></label>
                <select asp-for="Order.PromotionId" class="form-control" asp-items="ViewBag.PromotionId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Order.ShippingAddress" class="control-label"></label>
                <input asp-for="Order.ShippingAddress" class="form-control" />
                <span asp-validation-for="Order.ShippingAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order.DeliveryMethod" class="control-label"></label>
                <input asp-for="Order.DeliveryMethod" class="form-control" />
                <span asp-validation-for="Order.DeliveryMethod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order.PaymentStatus" class="control-label"></label>
                <input asp-for="Order.PaymentStatus" class="form-control" />
                <span asp-validation-for="Order.PaymentStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order.Vat" class="control-label"></label>
                <input asp-for="Order.Vat" class="form-control" />
                <span asp-validation-for="Order.Vat" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order.TotalAmountVat" class="control-label"></label>
                <input asp-for="Order.TotalAmountVat" class="form-control" />
                <span asp-validation-for="Order.TotalAmountVat" class="text-danger"></span>
            </div>

            <!-- Section for Order Details -->
            <h4>Order Details</h4>
            <div id="orderDetails">
                <div class="order-detail">
                    <div class="form-group">
                        <label asp-for="OrderDetails[0].ProductID" class="control-label"></label>
                        <input asp-for="OrderDetails[0].ProductID" class="form-control" />
                        <span asp-validation-for="OrderDetails[0].ProductID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="OrderDetails[0].AnimalID" class="control-label"></label>
                        <input asp-for="OrderDetails[0].AnimalID" class="form-control" />
                        <span asp-validation-for="OrderDetails[0].AnimalID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="OrderDetails[0].Quantity" class="control-label"></label>
                        <input asp-for="OrderDetails[0].Quantity" class="form-control" />
                        <span asp-validation-for="OrderDetails[0].Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="OrderDetails[0].Price" class="control-label"></label>
                        <input asp-for="OrderDetails[0].Price" class="form-control" />
                        <span asp-validation-for="OrderDetails[0].Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="OrderDetails[0].Discount" class="control-label"></label>
                        <input asp-for="OrderDetails[0].Discount" class="form-control" />
                        <span asp-validation-for="OrderDetails[0].Discount" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
