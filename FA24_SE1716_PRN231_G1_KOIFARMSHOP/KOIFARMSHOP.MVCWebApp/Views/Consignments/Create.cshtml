@model KOIFARMSHOP.Data.DTO.ConsignmentDTO.CreateConsignmentReq

@{
    ViewData["Title"] = "Create Consignment";
}

<h1 class="text-center mb-4">Create Consignment</h1>

<div class="container">
    <h4 class="text-muted">Consignment Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create" class="bg-light p-4 border rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="AnimalId" class="control-label">Animal Name</label>
                        <select asp-for="AnimalId" class="form-control" asp-items="ViewBag.AnimalName"></select>
                        <span asp-validation-for="AnimalId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ConsignmentType" class="control-label"></label>
                        <input asp-for="ConsignmentType" class="form-control" placeholder="Enter Consignment Type" />
                        <span asp-validation-for="ConsignmentType" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" placeholder="Enter Start Date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" placeholder="Enter End Date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" placeholder="Enter Price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CommissionRate" class="control-label"></label>
                        <input asp-for="CommissionRate" class="form-control" placeholder="Enter Commission Rate" />
                        <span asp-validation-for="CommissionRate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Notes" class="control-label"></label>
                        <textarea asp-for="Notes" class="form-control" placeholder="Enter Notes"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg w-100" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Animals" asp-action="Create" class="btn btn-secondary ml-2">Create Animal</a>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>


</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
